<!DOCTYPE html>
<html>
    <head>
         <!--STYLES-->
         <link rel="stylesheet" href="/styles/angular-toastr.min.css">
         <link rel="stylesheet" href="/styles/app.css">
         <link rel="stylesheet" href="/styles/foundation.min.css">
         <link rel="stylesheet" href="/styles/importer.css">
         <!--STYLES END-->
    </head>
    <body ng-app="LoginMod" ng-controller="LoginCtrl">
        <div class="large-4 large-centered columns">
            <div class="signup-box">
                <div class="row">
                    <div class="large-12 columns">
                    <h3 class="text-center">
                        Log In
                    </h3>
                    <p>Please fiil-up the form to log in...</p>
                    <form ng-submit="runLogin()">
                        <div class="row">
                            <div class="small-3 large-3 columns">
                                <span class="prefix">E-mail:</span>
                            </div>
                            <div class="small-9 large-9 columns">
                                <input ng-model="email" name="email" id="email" type="email" placeholder="Ex. iamjohn@example.com">
                            </div>
                        </div>
                        <div class="row">
                            <div class="small-3 large-3 columns">
                                <span class="prefix">Password:</span>
                            </div>
                            <div class="small-9 large-9 columns">
                                <input ng-model="password" name="pw" id="pw" type="password">
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="large-5 columns">
                                <input class="button expanded" type="submit" value="Log in" />
                            </div>
                            <div class="large-7 columns">
                                <a href="/signup" class="button expanded">Create account</a>
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>

        <!--SCRIPTS-->
        <script src="/js/dependencies/sails.io.js"></script>
        <script src="/js/dependencies/jquery.js"></script>
        <script src="/js/dependencies/angular.js"></script>
        <script src="/js/dependencies/angular-toastr.js"></script>
        <script src="/js/dependencies/angular-toastr.tpls.js"></script>
        <script src="/js/dependencies/foundation.min.js"></script>
        <script src="/js/public/signup/SignupMod.js"></script>
        <script src="/js/public/signup/SignupCtrl.js"></script>
        <script src="/js/public/login/LoginMod.js"></script>
        <script src="/js/public/login/LoginCtrl.js"></script>
        <script src="/js/private/dashboard/DashMod.js"></script>
        <script src="/js/private/dashboard/DashCtrl.js"></script>
        <!--SCRIPTS END-->
    </body>
</html>
